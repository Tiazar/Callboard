<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>

      <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">
          <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
        </div>
        <div class="col-xs-4"></div>
      </div>

    <% end %>
  </div>
</div>
