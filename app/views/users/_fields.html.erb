<%= render 'shared/error_messages' %>

<div class="row">
  <div class="col-xs-5 col-xs-offset-1 ">
    <%= f.label :login %>
    <%= f.text_field :login , maxlength: 50 %>
  </div>
  <div class="col-xs-5 col-xs-offset-1">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
</div>

<div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :birthday %>
      <%= f.text_field :birthday %>
    </div>
</div>

<div class="row">
    <div class="col-xs-11 col-xs-offset-1">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
</div>

<div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
</div>

<div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>
</div>

<div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="col-xs-5 col-xs-offset-1">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>
</div>
