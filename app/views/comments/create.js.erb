$(".JS-headers").html("<%=j render 'layouts/flash' %>");


<% if @comment.errors.any? %>
  $("#error").html("<%=j render 'shared/comment_error' %>");
<% else %>
  $('#comments-list').append('<%= escape_javascript(render @comment) %>');
  $("#commentCount").html("Comments(<%= @post.comments.count %>)");
  $("#error").html("");
<% end %>
